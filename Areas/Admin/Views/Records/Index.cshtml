@model IEnumerable<Finances.Domain.Entities.EntityBase>

@{
    ViewData["Title"] = "Index";
}

<p>
    @Html.ActionLink("Додати запис", "Create", "Records", new { area = "Admin" }, null)
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                Час
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @if (item.Direction)
                {
                    <p>Дохід</p>
                }
                else
                {
                    <p>Витрати</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.ActionLink("Редагувати", "Edit", "Records", new { area = "Admin", id = item.Id }, null) |
                @Html.ActionLink("Видалити", "Delete", "Records", new { area = "Admin", id = item.Id }, null)
            </td>
        </tr>
}
    </tbody>
</table>
