@model Finances.Domain.Entities.EntityBase

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>EntityBase</h4>
<hr />
<div class="row">

@using (Html.BeginForm("Create", "Records"))
    {
    <fieldset>
        <legend>Новий запис</legend>
        <input type="hidden" value="@ViewBag.Id" name="Id" />
        <p>
            Сума <br />
            @Html.EditorFor(model => model.Amount)
        </p>

        <p>
            Дохід? <br />
            @Html.EditorFor(model => model.Direction)
        </p>

        <p>
            Категорія <br />
            @Html.EditorFor(model => model.Category)
        </p>

        <input type="hidden" value="@ViewBag.DateAdded;" name="DateAdded" />

        <p>
            <input type="submit" value="Додати" />
        </p>

    </fieldset>
    }
    <div>
        @Html.ActionLink("Назад", "Index")
    </div>
</div>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
