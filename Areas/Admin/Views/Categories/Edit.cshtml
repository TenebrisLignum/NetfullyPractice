@model Finances.Domain.Entities.Categories

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редагування категорії</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Edit", "Categories"))
        {
        <fieldset>
            <legend> Редагування </legend>
            <p>
                Назва категорії: <br />
                @Html.EditorFor(model => model.Name)
            </p>

            <p>
                @Html.EditorFor(model => model.Direction)
            </p>

            <p>
                <input type="submit" value="Змінити" />
            </p>

        </fieldset>
        }
    </div>
    <div>
        @Html.ActionLink("Назад", "Delete", "Categories", new { area = "Admin" }, null)
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
