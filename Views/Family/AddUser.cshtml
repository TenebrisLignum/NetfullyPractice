@using Finances.Domain.Entities;
@model IEnumerable<Finances.Domain.Entities.User>
@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1>AddUser</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </th>
                    <th>
                        <form asp-action="AddUserToFamily">
                            <input type="hidden" value="@item.Id" name="userId" />
                            <input type="hidden" value="@ViewBag.familyid" name="familyId" />
                            <input type="submit" value="AddUserToFamily" class="btn btn-primary" />
                        </form>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>