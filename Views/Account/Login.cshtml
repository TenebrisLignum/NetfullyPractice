@model Finances.Models.LoginViewModel

<div class="row">
    <div class="col-md-12 text-center">
        <h2 class="mr-2">Редагувати інформацію </h2>
    </div>
</div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
            <div>
                <label asp-for="UserName" class="control-label"></label>
                <input name="UserName" asp-for="UserName" class="form-control" />
            </div>
            <div>
                <label asp-for="Password" class="control-label"></label>
                <input name="Password" type="password" asp-for="Password" class="form-control"/>
            </div>
            <div>
                <label asp-for="RememberMe" class="control-label"></label>
                <input type="checkbox" asp-for="RememberMe"/>
                <span asp-validation-for="RememberMe"></span>
            </div>
            <div>
                <input type="submit" value="Увійти" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>