@model Finances.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Зміна паролю";
}

<div class="row">
    <div class="col-md-12 text-center">
        <h2 class="mr-2">Зміна паролю для @Model.Email</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="ChangePassword" asp-controller="Profile">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label">Старий пароль</label>
                <input type="text" asp-for="OldPassword" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">Новий пароль</label>
                <input type="text" asp-for="NewPassword" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-dark" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>