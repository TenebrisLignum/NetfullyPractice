@model Finances.Domain.Entities.EntityBase

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Деталі</h2>

<div>
    <h4>Запис від @Model.DateAdded.ToString("dd/MM/yyyy")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TheUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TheUser)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount) грн.
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Direction)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Direction)
            {
                <span style="color: green">Дохід</span>
            }
            else
            {
                <span style="color: darkred">Витрати</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        @if (Model.About != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.About)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.About)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateAdded)
        </dt>
        <dd class="col-sm-10">
            @{var date = Model.DateAdded.ToString("dd/MM/yyyy HH:mm");
                <span> @Html.DisplayFor(p => date)</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-familyId="@ViewBag.familyId">Редагувати</a> |
    <a asp-action="Index" asp-route-familyId="@ViewBag.familyId">Всі записи</a>
</div>
