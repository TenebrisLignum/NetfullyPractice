@model Finances.Domain.Entities.EntityBase

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Деталі</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TheUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TheUser)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Direction)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Direction)
            {
                <p style="color: green">Дохід</p>
            }
            else
            {
                <p style="color: darkred">Витрати</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        @if (Model.About != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.About)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.About)
            </dd>
        }
        <dt class="col-sm-2">
            Час
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateAdded)
        </dd>
    </dl>
</div>
