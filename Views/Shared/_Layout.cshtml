@using MyCompany.Service
<!DOCTYPE html>
<html>

<head>
    <title>@Config.CompanyName</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>

<body>
    <div class="container-fluid">
        <div class="row header navbar navbar-expand-md navbar-dark bg-dark">
            <div class="col-md-9">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="toggle-btn">
                        <span class="toggle-button">
                            <div class="menu-bar menu-bar-top"></div>
                            <div class="menu-bar menu-bar-middle"></div>
                            <div class="menu-bar menu-bar-bottom"></div>
                        </span>
                    </div>
                }
                <div class="page-header" style="margin-left: 40px;">
                    <a class="navbar-brand" href="#">Finances</a>
                </div>
            </div>
            <div class="col-md-3">
                <ul class="nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item" style="margin-left: auto;">
                            <p class="col-sm-2 col-form-label" style="color: white;">@User.Identity.Name</p>
                        </li>
                        <li class="nav-item" style="margin-left: auto;">
                            <a class="nav-link" style="color: white;" asp-controller="Profile" asp-action="Index" asp-area="default">Мій профіль</a>
                        </li>
                        <li class="nav-item" style="margin-left: auto;">
                            <form class="form-inline mt-2 mt-md-0" method="post" asp-controller="Account" asp-action="Logout">
                                <button class="btn btn-light" type="submit">Вийти</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item" style="margin-left: auto;">
                            <form class="form-inline mt-2 mt-md-0" asp-controller="Account" asp-action="Login">
                                <button class="btn btn-light" type="submit">Увійти</button>
                            </form>
                        </li>
                        <li class="nav-item" style="margin-right: 0; margin-left: 10px;">
                            <form class="form-inline mt-2 mt-md-0" asp-controller="Account" asp-action="Register">
                                <button class="btn btn-light" type="submit">Реєстрація</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 menu-wrap">
                <div class="wrapper p-3 pt-4 menu-sidebar">
                    <nav class="sidebar">
                        <div class="sidebar-header">
                            <h4>Навігація по сайту</h4>
                        </div>
                        <ul class="list-unstyled components" style="margin-left: -15px">
                            <li>
                                @if (User.Identity.Name == "admin")
                                {
                                    <a class="nav-link" style="color: white;" asp-area="admin" asp-controller="Home" asp-action="Index">Панель адміністратора</a>
                                }
                            </li>
                            <li>
                                <a class="nav-link" style="color: white;" asp-area="default" asp-controller="Records" asp-action="Index">Особисті записи</a>
                            </li>
                            <li>
                                <a class="nav-link" style="color: white;" asp-area="default" asp-controller="Family" asp-action="Index">Групи</a>
                            </li>
                            <li>
                                <a class="nav-link" style="color: white;" asp-area="default" asp-controller="Statistics" asp-action="Index">Статистика</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="col-md-12 px-5 pt-3">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/script.js"></script>
    <link rel="stylesheet" href="~/css/main.css">
</body>

</html>

@if (IsSectionDefined("scripts"))
{
    RenderSection("scripts");
}